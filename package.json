{
    "name": "hikka-monorepo",
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "prettier": "prettier \"*.{js,json,yml,md}\" \"packages/**/*\" \"apps/**/*\"",
        "format": "npm run prettier -- --write",
        "format:check": "npm run prettier -- --check",
        "lint": "eslint \"packages/**/*.{js,jsx,ts,tsx}\" \"apps/**/*.{js,jsx,ts,tsx}\"",
        "lint:fix": "eslint \"packages/**/*.{js,jsx,ts,tsx}\" \"apps/**/*.{js,jsx,ts,tsx}\" --fix",
        "dev:web": "yarn workspace @hikka/web dev",
        "build:web": "yarn workspace @hikka/web build",
        "dev:client": "yarn workspace @hikka/client dev",
        "build:client": "yarn workspace @hikka/client build"
    },
    "packageManager": "yarn@4.5.3",
    "syncpack": {
        "filter": "^(?!@hikka).*",
        "semverRange": ""
    },
    "resolutions": {
        "@types/react": "19.1.1",
        "@types/react-dom": "19.1.2"
    },
    "devDependencies": {
        "@tanstack/eslint-plugin-query": "^5.60.1",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/node": "20.9.0",
        "@types/react": "19.1.1",
        "@types/react-dom": "19.1.2",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "autoprefixer": "10.4.15",
        "eslint": "^8.49.0",
        "eslint-config-next": "15.3.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-functional": "^6.0.0",
        "eslint-plugin-tailwindcss": "^3.15.1",
        "postcss": "8.4.47",
        "postcss-import": "^16.1.0",
        "postcss-nesting": "^12.1.0",
        "prettier": "^3.0.3",
        "prettier-plugin-tailwindcss": "^0.5.9",
        "tailwindcss": "3.4.14",
        "typescript": "5.7.2"
    }
}
