{
    "name": "@hikka/client",
    "version": "0.1.0",
    "description": "TypeScript client library for the Hikka API",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "clean": "rimraf dist",
        "prebuild": "yarn clean",
        "dev": "tsc --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "keywords": [
        "hikka",
        "anime",
        "manga",
        "api",
        "client",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.4",
        "jest": "^29.6.4",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.1.1"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "**/*.ts",
            "!**/*.d.ts",
            "!dist/**/*",
            "!node_modules/**/*",
            "!**/*.test.ts",
            "!**/*.spec.ts"
        ]
    },
    "packageManager": "yarn@4.5.3"
}
