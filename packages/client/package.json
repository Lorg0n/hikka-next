{
    "name": "@hikka/client",
    "version": "0.1.0",
    "description": "TypeScript client library for the Hikka API",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsup --tsconfig tsconfig.build.json",
        "build:watch": "tsup --watch",
        "build:clean": "rimraf dist",
        "prebuild": "yarn build:clean",
        "dev": "tsup --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint \"**/*.ts\" --fix"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs",
            "default": "./dist/index.mjs"
        }
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "keywords": [
        "hikka",
        "anime",
        "manga",
        "api",
        "client",
        "typescript"
    ],
    "author": "olexh",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.4",
        "jest": "^29.6.4",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.1.1",
        "tsup": "^8.4.0",
        "typescript": "^5.8.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "**/*.ts",
            "!**/*.d.ts",
            "!dist/**/*",
            "!node_modules/**/*",
            "!**/*.test.ts",
            "!**/*.spec.ts"
        ]
    },
    "packageManager": "yarn@4.5.3",
    "dependencies": {
        "cross-fetch": "^4.1.0"
    }
}
