{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "paths": {
            "@/server/*": ["./server/*"],
            "@/hooks/*": ["./hooks/*"],
            "@/provider/*": ["./provider/*"]
        },
        "baseUrl": ".",
        "outDir": "./dist",
        "composite": true,
        "rootDir": "."
    },
    "include": [
        "index.ts",
        "provider/**/*.ts",
        "provider/**/*.tsx",
        "hooks/**/*.ts",
        "hooks/**/*.tsx",
        "server/**/*.ts",
        "server/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ],
    "references": [{ "path": "../client" }]
}
